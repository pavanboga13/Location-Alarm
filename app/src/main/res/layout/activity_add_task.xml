<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".AddTask">

        <TextView
            android:id="@+id/texttask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="ADD TASK"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/editview1"
            android:layout_width="301dp"
            android:layout_height="44dp"
            android:layout_below="@+id/texttask"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:id="@+id/editview2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editview1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:hint="Place Name" />

        <EditText
            android:id="@+id/editinaddtask"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editview2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:hint="Task Details" />

        <Button
            android:id="@+id/btnLoc"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editinaddtask"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="SELECT LOCATION"
            android:textSize="20dp" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="186dp"
        android:visibility="invisible" />


</RelativeLayout>